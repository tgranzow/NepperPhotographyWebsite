<div class="container blog-container">
    <p id="notice"><%= notice %></p>
    <div class="blog-layout">
        <div class="blog-title">
          <h1><%= @blog.title %></h1>
      </div>

        <div class="blog-body">
          <p><%= @blog.blurb %></p>
      </div>
        <div class="row blog-row">
            <div class="col-lg-12 col-md-12col-sm-12 col-xs-12 blog-col">
                <div class="blog-content">
                    <% @blog.images.each do |image| %>
                  <%= image_tag(image.url, class: "show-img blog-show-img") %>
                  <% end %>
              </div>
          </div>
  </div>
    <%= link_to 'Edit', edit_blog_path(@blog), class: "functional" %> |
    <%= link_to 'Back', blogs_path, class: "functional" %>
</div>
