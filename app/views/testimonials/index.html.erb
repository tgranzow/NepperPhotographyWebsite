<div class="container">
    <p id="notice"><%= notice %></p>
    <h1 class="testonial-title">Testimonial Uploads</h1>

    <table>
      <thead>
        <tr>
          <th class="testimonial-crud testonial-title">Testimonials</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @testimonials.each do |testimonial| %>
          <tr>
              <div id="testimonial">
                <td id="testimonial-index-post"><%= testimonial.posts %></td>
                <td class="testimonial-crud"><%= link_to 'View', testimonial %></td>
                <td class="testimonial-crud"><%= link_to 'Edit', edit_testimonial_path(testimonial) %></td>
                <td class="testimonial-crud"><%= link_to 'Delete', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>

          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Testimonial', new_testimonial_path, class: "testimonial-crud btn btn-primary" %>
</div>
