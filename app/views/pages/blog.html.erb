    <div class="container">
    <h1 class="page-header">Blogs</h1>
        <div class="blog-home-container card">
            <% @blog.each do |blog| %>
            <h2>
                <%= blog.title %>
            </h2>
            <hr>
                <%= image_tag(blog.images.first, class: "blog-home-img image-responsive") %>

             <hr>
             <p><%= blog.blurb %></p>
             <a class="btn btn-primary blog-btn" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
             <hr class="blog-end">
            <% end %>
        </div>
        <div>
            <ul class="pager">
                <li class="previous">
                    <a href="#">&larr; Older</a>
                </li>
                <li class="next">
                    <a href="#">Newer &rarr;</a>
                </li>
            </ul>

        </div>
    </div>
